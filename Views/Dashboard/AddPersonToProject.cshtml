@model TaskManager.ViewModels.ProjectUserJoinViewModel

@{
    ViewBag.Title = "Add Person To Project";
    List<string> users = ViewBag.Users as List<string>;
}

<h2>Add person to project</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserString, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserString, new SelectList(users), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserString, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}
